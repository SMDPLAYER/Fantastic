<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/centermenu"
    android:orientation="vertical">

    <TextView
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Qismni Tanlang"
        android:textColor="#fff"
        android:textSize="34sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="-20dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardRandom"
                style="@style/CardViews2"
                android:layout_height="120dp"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="1 - Qism "

                    android:textSize="24sp"

                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/checked" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRandom1"
                style="@style/CardViews2"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom1"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="2 - Qism"
                    android:textSize="24sp"

                    />


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/checked" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/carRandom2"
                style="@style/CardViews2"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom2"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="3 - Qism"
                    android:textSize="24sp"

                    />


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/checked" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRandom3"
                style="@style/CardViews2"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom3"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="4 - Qism"
                    android:textSize="24sp"

                    />

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/unchecked" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRandom4"
                style="@style/CardViews2"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom4"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="5 - Qism"
                    android:textSize="24sp"

                    />


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/unchecked" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRandom5"
                style="@style/CardViews2"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom5"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="6 - Qism"
                    android:textSize="24sp"

                    />


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/unchecked" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRandom6"
                style="@style/CardViews2"
                android:layout_marginStart="-30dp">

                <Button
                    android:id="@+id/btnRandom6"
                    style="@style/button.SignUp"
                    android:layout_gravity="center"
                    android:paddingHorizontal="20dp"
                    android:text="7 - Qism"
                    android:textSize="24sp"

                    />


                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="50dp"

                    android:layout_gravity="end|center_vertical"
                    android:src="@drawable/unchecked" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>